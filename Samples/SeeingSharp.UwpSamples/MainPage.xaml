<Page
    x:Class="SeeingSharp.UwpSamples.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SeeingSharp.UwpSamples"
    xmlns:localControls="using:SeeingSharp.UwpSamples.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sSharp="using:SeeingSharp.Multimedia.Views"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.DataContext>
        <local:MainWindowViewModel />
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  List of sample groups  -->
        <ListBox
            Grid.Row="0"
            Background="#00CCFF"
            BorderThickness="0"
            FontWeight="Bold"
            Foreground="White"
            ItemsSource="{Binding Path=SampleGroups}"
            SelectedItem="{Binding Path=SelectedGroup, Mode=TwoWay}">

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Foreground="White" Text="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Grid.Row="1">
            <sSharp:SeeingSharpRenderPanel x:Name="CtrlSwapChain" />

            <ListBox
                VerticalAlignment="Top"
                VerticalContentAlignment="Top"
                Background="#BBD3D3D3"
                BorderThickness="0"
                Foreground="Black"
                ItemsSource="{Binding Path=Samples}"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                SelectedItem="{Binding Path=SelectedSample, Mode=TwoWay}"
                SelectionChanged="OnSelectedSampleChanged"
                SelectionMode="Single">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5" Orientation="Vertical">
                            <Image
                                Width="64"
                                Height="64"
                                Margin="5"
                                Source="{Binding Path=BitmapSource}" />
                            <TextBlock HorizontalAlignment="Center" Text="{Binding Path=Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!--  Command bar  -->
            <ItemsControl VerticalAlignment="Top" ItemsSource="{Binding Path=SampleCommands}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button
                            MinWidth="200"
                            Margin="10,135,10,40"
                            Background="#BBD3D3D3"
                            Command="{Binding}">
                            <TextBlock Margin="2" Text="{Binding Path=CommandText}" />
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!--  PropertyGrid on the left  -->
            <localControls:PropertyGrid
                MaxWidth="530"
                Margin="10,180,10,40"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Red"
                SelectedObject="{Binding Path=SampleSettings, Mode=TwoWay}" />

            <StackPanel
                VerticalAlignment="Bottom"
                Background="#BBD3D3D3"
                Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="Margin" Value="2" />
                    </Style>
                    <Style TargetType="Image">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="Margin" Value="2" />
                    </Style>
                    <Style TargetType="ComboBox">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="Margin" Value="2" />
                    </Style>
                    <Style TargetType="Rectangle">
                        <Setter Property="Margin" Value="2" />
                    </Style>
                </StackPanel.Resources>

                <Image Width="16" Source="/Assets/Icons/Output16x16.png" />
                <TextBlock Text="Resolution:" />
                <TextBlock Text="{Binding ElementName=CtrlSwapChain, Path=CurrentViewSize, Mode=OneWay}" />
                <TextBlock Text="px" />
                <Rectangle Width="1" Fill="Gray" />

                <Image Width="16" Source="/Assets/Icons/Adapter16x16.png" />
                <TextBlock Text="Device:" />
                <ComboBox
                    Width="250"
                    ItemsSource="{Binding ElementName=CtrlSwapChain, Path=PossibleDevices, Mode=OneWay}"
                    SelectedItem="{Binding ElementName=CtrlSwapChain, Path=SelectedDevice, Mode=TwoWay}" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>